{
  "name": "Cloudflare 管理后台防护",
  "code": "cf_admin_shield",
  "type": "feature",
  "version": "1.0.0",
  "description": "使用Cloudflare Turnstile保护管理后台",
  "author": "chenchen71956",
  "require": {
    "xboard": ">=1.0.0"
  },
  "config": {
    "allow_cn_ip": {
      "type": "boolean",
      "default": true,
      "label": "允许 CN IP 访问",
      "description": "关闭后，将禁止CN IP 访问管理后台入口"
    },
    "proxy_url": {
      "type": "string",
      "default": "https://hyperos.mi.com/",
      "label": "伪装目标地址",
      "description": "用于返回反代伪装内容的目标 URL"
    },
    "ipdb_appid": {
      "type": "string",
      "default": "",
      "label": "IPDB APPID",
      "description": "用于 IPDB API的 APPID"
    },
    "ipdb_secret": {
      "type": "string",
      "default": "",
      "label": "IPDB 密钥",
      "description": "用于生成 datasign 的密钥"
    },
    "turnstile_site_key": {
      "type": "string",
      "default": "",
      "label": "Turnstile Site Key",
      "description": "Cloudflare Turnstile 的站点密钥"
    },
    "turnstile_secret_key": {
      "type": "string",
      "default": "",
      "label": "Turnstile Secret Key",
      "description": "Cloudflare Turnstile 的私密密钥"
    }
  }
}
