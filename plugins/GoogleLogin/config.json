{
  "name": "Google 登录",
  "code": "google_login",
  "type": "feature",
  "version": "1.0.0",
  "description": "使用 Google OAuth2 登录",
  "author": "chenchen71956",
  "require": {
    "xboard": ">=1.0.0"
  },
  "config": {
    "client_id": {
      "type": "string",
      "default": "",
      "label": "Google Client ID",
      "description": "Google OAuth2 客户端 ID"
    },
    "client_secret": {
      "type": "string",
      "default": "",
      "label": "Google Client Secret",
      "description": "Google OAuth2 客户端密钥"
    },
    "callback_url": {
      "type": "string",
      "default": "",
      "label": "授权回调地址",
      "description": "Google OAuth2 回调地址，留空则使用当前域名默认回调路径"
    },
    "redirect": {
      "type": "string",
      "default": "dashboard",
      "label": "登录后跳转",
      "description": "登录完成后前端跳转路径（对应前端 #/ 的 redirect 参数）"
    }
  }
}
